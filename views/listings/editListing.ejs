<%- layout("/layouts/boilerplate") %>

    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <h3>Edit Listing</h3>
                <!-- Title -->
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label" for="title">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control"
                            required>
                    </div>
                    
                    <!-- image url -->
                    <div class="mb-3">
                        <h6>Original Image</h6>
                        <img class="listing-preview-img" src="<%= originalImgUrl %>">
                    </div>

                    <!-- image url -->
                    <div class="mb-3">
                        <label for="imageUrl" class="form-label" for="title">Image Url</label>
                        <input type="file" name="listing[image]" 
                            class="form-control" required>
                    </div>

                    <!-- price -->
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label" for="title">Price</label>
                            <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control"
                                required>
                        </div>

                        <!-- country -->
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label" for="title">Country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>"
                                class="form-control" required>
                        </div>
                    </div>

                    <!-- location -->
                    <div class="mb-3">
                        <label for="location" class="form-label" for="title">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control"
                            required>
                    </div>

                    <!-- description -->
                    <div class="mb-3">
                        <label for="description" class="form-label" for="title">Description</label>
                        <textarea type="text" name="description" class="form-control" rows="8"
                            cols="40"> <%= listing.description  %></textarea>


                    </div>
                    <!-- <form action="/listings/<= listing._id %>?_method=PUT" , method="post"> -->

                    <button class="btn btn-primary">update</button>

                </form>
            </div>
        </div>
    </body>
